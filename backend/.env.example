# OpenRouter Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Payment Configuration
ENABLE_PAYMENT_REQUIRED=true
ENABLE_TX_VALIDATION=true
PAYMENT_RECIPIENT=0x1234567890123456789012345678901234567890
PAYMENT_AMOUNT=50000
PAYMENT_TOKEN_SYMBOL=PYUSD
PAYMENT_TOKEN_ADDRESS=0x0987654321098765432109876543210987654321
PAYMENT_TOKEN_DECIMALS=6

# Network Configuration
NETWORK_NAME=sepolia
BASE_SEPOLIA_RPC=https://sepolia.base.org
API_BASE_URL=http://localhost:3001
